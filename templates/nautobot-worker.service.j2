[Unit]
Description=Nautobot Request Queue Worker
Documentation=https://nautobot.readthedocs.io/
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment="NAUTOBOT_ROOT={{ nautobot_root }}"

User=nautobot
Group=nautobot
WorkingDirectory={{ nautobot_root }}

ExecStart={{ nautobot_root }}/bin/nautobot-server rqworker

Restart=on-failure
RestartSec=30
PrivateTmp=true

[Install]
WantedBy=multi-user.target
